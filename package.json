{
  "name": "data-den-core",
  "version": "1.0.0",
  "type": "module",
  "license": "SEE LICENSE IN LICENSE.pdf",
  "author": "MDBootstrap <office@mdbootstrap.com>",
  "main": "./dist/data-den.umd.min.js",
  "module": "./dist/data-den.es.min.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "concurrently npm:start:*",
    "start:ts": "tsc --declaration --watch",
    "start:sass": "sass --watch src/scss/index.scss:dist/css/data-den.css",
    "prestart": "npm run clean-dist",
    "build": "npm run build:ts && npm run build:sass",
    "build:ts": "tsc --declaration",
    "build:sass": "sass src/scss/index.scss:dist/css/data-den.css --style=compressed",
    "prebuild": "npm run clean-dist",
    "clean-dist": "node -e \"var fs = require('fs'); try{fs.rmdirSync('dist', { recursive: true })}catch(err){console.log(`Dist not found`)}; process.exit(0);\"",
    "test": "jest test/ --coverage",
    "test:watch": "jest test/--coverage --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged && jest test/ --collectCoverageFrom=src/**/*.ts"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mdbootstrap/Data-Den"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^4.2.5",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2",
    "pretty-quick": "^3.1.3",
    "sass": "^1.66.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
